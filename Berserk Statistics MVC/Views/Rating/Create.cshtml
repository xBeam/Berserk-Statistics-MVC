@model Statistics.Domain.Rating

@{
    ViewBag.Title = "Create";
}

<h2>Добавление записи в рейтинг</h2>
<p></p>
<section id="loginForm">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)


        <fieldset>
            <legend>Rating</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.MemberId, "Участник")
            </div>
            <div class="editor-field">
                @Html.DropDownList("MemberId", String.Empty)
                @Html.ValidationMessageFor(model => model.MemberId)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Win, "Победы")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Win)
                @Html.ValidationMessageFor(model => model.Win)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.Loss, "Поражения")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Loss)
                @Html.ValidationMessageFor(model => model.Loss)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.TournamentsNumber, "Количество турниров")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.TournamentsNumber)
                @Html.ValidationMessageFor(model => model.TournamentsNumber)
            </div>

            @*<div class="editor-label">
                @Html.LabelFor(model => model.PercentPoint, "Очки")
            </div>*@
            @*<div class="editor-field">
                @Html.EditorFor(model => model.PercentPoint)
                @Html.ValidationMessageFor(model => model.PercentPoint)
            </div>*@

            <p>
                <input type="submit" value="Добавить" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Назад к рейтингу", "Index")
    </div>
</section>

<section class="social" id="socialLoginForm">
    @Html.ActionLink("Создать участников", "Create", "Member")
    <p>
        @Html.ActionLink("Редактировать участников", "Index", "Member")
    </p>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
