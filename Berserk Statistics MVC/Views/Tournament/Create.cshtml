@model Statistics.Domain.Tournament

@{
    ViewBag.Title = "Create";
}

<h2>Создание турнира</h2>

<p>
    @Html.ActionLink("Параметры", "Create", "Tournament")
    @Html.ActionLink("Участники", "Members", "Tournament")
    @Html.ActionLink("Стыковые матчи", "Create", "Round")
</p>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Tournament</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.TournamentName, "Название турнира")
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TournamentName)
            @Html.ValidationMessageFor(model => model.TournamentName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Rounds, "Количество раундов")
        </div>
        <div class="editor-field">
            <input type="text" value="3" />
            @Html.ValidationMessageFor(model => model.Rounds)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
