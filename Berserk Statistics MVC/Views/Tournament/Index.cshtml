@model IEnumerable<Statistics.Domain.Tournament>

@{
    ViewBag.Title = "Турниры";
}

<h2>Турниры</h2>

@section styles
{
    <link href="~/Content/GridStyles.css" rel="stylesheet" />
    @Styles.Render("~/Content/themes/base/css")
    
}

<p>
    <a class="btn btn-default" href="@Url.Action("Create", "Tournament")" aria-controls="example" data-dt-idx="1">Добавить новый</a>
</p>

<table id="tournamentlist" class="display" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Имя</th>
            <th>Дата</th>
            <th>Количество раундов</th>
            <th></th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var tournament in Model)
        {
            <tr>
                <td>@tournament.TournamentName</td>
                <td>@tournament.Date</td>
                <td>3</td>
                <td><a class="btn btn-default btn-sm btn-block" href="@Url.Action("Edit", "Tournament", new { id = tournament.TournamentId })" aria-controls="tournamentlist" data-dt-idx="1">Edit</a></td>
                <td><a class="btn btn-default btn-sm btn-block" href="@Url.Action("Delete", "Tournament", new { id = tournament.TournamentId })" aria-controls="tournamentlist" data-dt-idx="1">Delete</a></td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    @Scripts.Render("~/Scripts/dataTables.select.min.js")
    @Scripts.Render("~/Scripts/dataTables.editor.min.js")
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment.min.js"></script>
    <script src="//cdn.datatables.net/plug-ins/1.10.10/sorting/date-eu.js"></script>
    
       
    <script>
        $(document).ready(function () {
            $('#tournamentlist').DataTable({
                columnDefs: [
                  { type: 'date-eu', targets: 0 }
                ]
            });
        });
    </script>
}

